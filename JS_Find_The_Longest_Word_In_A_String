function findLongestWord(str) {  // declare function
  //return str.length;

var largest = 0;
  
str = str.split(" ");

for (var x=0; x<str.length; x++){
  if (str[x].length >= largest){
    largest = str[x].length;
  } 
}
    
return largest;
  
}

findLongestWord("The quick brown fox jumped over the lazy dog");
